.profile{
  background: #ff2121;
  height: 400rpx;
  text-align: center;
  position: absolute;
  width: 100%;
}
.profile-img{
  width: 200rpx;
  height: 200rpx;
  display: block;
  overflow: hidden;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 60rpx);
}
.profile-name{
  font-size: 36rpx;
  color: #fff;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 270rpx);
}
.getInfo{
  position: absolute;
  top:400rpx;
  width: 100%;
  border: 1px solid #ccc;
}